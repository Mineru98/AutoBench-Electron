{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.19.0",
    "chart.js": "^2.9.3",
    "electron-is-dev": "^1.1.0",
    "react": "^16.12.0",
    "react-chartjs-2": "^2.8.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.2"
  },
  "scripts": {
		"clear": "rm -rf dist && rm -rf build",
    "start": "concurrently \"BROWSER=none yarn start:react\" \"wait-on http://localhost:3000 && electron .\"",
    "start:react": "react-scripts start",
    "build": "react-scripts build",
		"build:osx": "electron-builder --mac",
    "build:linux": "yarn build:linux32 && yarn build:linux64",
    "build:linux32": "electron-builder --linux --ia32",
    "build:linux64": "electron-builder --linux --x64",
    "build:win": "yarn build:win32 && yarn build:win64", 
    "build:win32": "electron-builder --win --ia32",
    "build:win64": "electron-builder --win --x64",
		"deploy:win32": "nodejs installer.js"
  },
	"build": {
    "productName": "AutoBench",
    "appId": "com.mineru.autobench",
    "asar": true,
    "protocols" : {
        "name" : "AutoBench",
        "schemes" : ["AutoBench"]
    },
    "mac": {
      "target": [
        "default"
      ],
      "icon": "./assets/icon.icns"
    },
    "dmg": {
      "title": "AutoBench",
      "icon": "./assets/icon.icns"
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "icon": "./assets/icon-512.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "zip",
        "tar.gz"
      ],
      "icon": "./assets/icon-512-nocolor.png"
    },
    "nsis":{
      "oneClick" : false,
      "allowToChangeInstallationDirectory" :true
    },
    "directories": {
      "buildResources": "assets/",
      "output": "dist/",
      "app": "."
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.0.2",
    "electron": "^7.1.7",
    "electron-builder": "^21.2.0",
    "electron-packager": "^14.1.1",
    "electron-prebuilt": "^1.4.13",
    "electron-winstaller": "^4.0.0",
    "wait-on": "^3.3.0"
  },
  "main": "public/electron.js"
}
